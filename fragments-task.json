{
  "family": "fragments-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "containerDefinitions": [
    {
      "name": "fragments",
      "image": "${AWS_ACCOUNT_ID}.dkr.ecr.us-east-1.amazonaws.com/fragments:latest",
      "portMappings": [
        {
          "containerPort": 8080,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/fragments-task",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "fragments"
        }
      },
      "environment": [
        {
          "name": "AWS_S3_BUCKET_NAME",
          "value": "fragments-bucket-${AWS_ACCOUNT_ID}"
        },
        {
          "name": "AWS_DYNAMODB_TABLE_NAME",
          "value": "fragments"
        }
      ]
    }
  ]
}
