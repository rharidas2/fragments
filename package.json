{
  "name": "fragments",
  "private": true,
  "version": "0.0.1",
  "description": "Fragments back-end API",
  "scripts": {
    "test": "jest -c jest.config.js --runInBand --",
    "test:watch": "jest -c jest.config.js --runInBand --watch --",
    "coverage": "jest -c jest.config.js --runInBand --coverage",
    "lint": "eslint \"./src/**/*.js\" \"tests/**/*.js\"",
    "start": "node src/index.js",
    "dev": "node --env-file=debug.env --watch ./src/index.js",
    "debug": "node --env-file=debug.env --inspect=0.0.0.0:9229 --watch ./src/index.js",
    "test:integration": "env $(cat tests/.env.test | xargs) hurl --test --glob \"tests/integration/**/*.hurl\""

  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rharidas2/fragments.git"
  },
  "author": "Rohith Haridas",
  "license": "UNLICENSED",
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@eslint/json": "^0.13.2",
    "@orangeopensource/hurl": "^6.1.4",
    "eslint": "^9.35.0",
    "globals": "^16.4.0",
    "jest": "^29.7.0",
    "prettier": "3.6.2",
    "supertest": "^7.1.4"
  },
  "dependencies": {
    "aws-jwt-verify": "^5.1.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "http-auth": "^4.2.1",
    "http-auth-passport": "^1.0.7",
    "markdown-it": "^14.1.0",
    "passport": "^0.7.0",
    "passport-http-bearer": "^1.0.1",
    "pino": "^9.9.4",
    "pino-http": "^10.5.0",
    "pino-pretty": "^13.1.1",
    "stoppable": "^1.1.0"
  }
}
